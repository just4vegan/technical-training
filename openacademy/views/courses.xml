


<odoo>
    
    <record model="ir.ui.view" id="course_view_tree">
        <field name="name">course Template List</field>
        <field name="model">openacademy.course</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="description" />
                <field name="level" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="instructor_bool_view_form">
        <field name="name">Is Instructor Bool</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="is_instructor" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record model="ir.actions.act_window" id="action_course">
      <field name="name">course Action</field>
      <field name="res_model">openacademy.course</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Top menu item -->
    <menuitem name="course0" id="menu_course_top" sequence="1" />
    <!-- actions -->
    <menuitem name="course" id="menu_course" parent="menu_course_top"
              action="action_course"/>
</odoo>
